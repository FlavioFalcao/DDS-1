project {
  requires               += erlang

  Define_Custom(Erlang) {
    automatic_in          = 1
    automatic_out         = 1
    command               = erlc
    commandflags          = -o ebin
    generic_outputext     = .beam
    generic_pre_dirname   = ebin/
    inputext              = .erl
    keyword erlcflags     = commandflags
    output_follows_input  = 0
  }
}
