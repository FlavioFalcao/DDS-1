project(DDS*idl): dcps {
  // This project ensures the common components get built first.

  TypeSupport_Files {
    Test.idl
  }

  IDL_Files {
    Test.idl
    TestTypeSupport.idl
  }

  custom_only = 1
}


project(DDS*Publisher) : dcpsexe_with_tcp {

  exename   = publisher
  after    += DDS*idl

  TypeSupport_Files {
    Test.idl
  }

  IDL_Files {
    Test.idl
    TestTypeSupport.idl
  }

  Source_Files {
    Publisher.cpp
    DataWriterListener.cpp
    TestTypeSupportImpl.cpp
  }
}

project(DDS*Subscriber) : dcpsexe_with_tcp {

  exename   = subscriber
  after    += DDS*idl

  TypeSupport_Files {
    Test.idl
  }

  IDL_Files {
    Test.idl
    TestTypeSupport.idl
  }

  Source_Files {
    Subscriber.cpp
    DataReaderListener.cpp
    TestTypeSupportImpl.cpp
  }
}
