
project(*SyncServer) : taoexe, portableserver {
  exename = syncServer
  idlflags    += -I../Sync
  includes += ../Sync
  libs += SyncServer
  after += Sync_ServerLib

  IDL_Files {
    SyncExt.idl
    ../Sync/Sync.idl
  }

  Source_Files {
    SyncServer.cpp
    SyncExt_i.cpp
  }
}

project(*Publisher) : taoexe, portableserver, dcps {

  exename   = publisher
  libs     += SyncClient
  includes += ../Sync
  after += *Server Sync_Client

  TypeSupport_Files {
    Messenger.idl >> MessageTypeSupport.idl MessageTypeSupportImpl.h MessageTypeSupportImpl.cpp
  }

  IDL_Files {
    Messenger.idl
    MessageTypeSupport.idl
    SyncExt.idl
    ../Sync/Sync.idl
  }

  Source_Files {
    SyncClientExt_i.cpp
    publisher.cpp
    Writer.cpp
    MessageTypeSupportImpl.cpp
  }
}

project(*Subscriber) : taoexe, portableserver, dcps {

  exename   = subscriber
  libs     += SyncClient
  includes += ../Sync
  after += *Server Sync_Client

  TypeSupport_Files {
    Messenger.idl >> MessageTypeSupport.idl MessageTypeSupportImpl.h MessageTypeSupportImpl.cpp
  }

  IDL_Files {
    Messenger.idl
    MessageTypeSupport.idl
    SyncExt.idl
    ../Sync/Sync.idl
  }

  Source_Files {
    SyncClientExt_i.cpp
    subscriber.cpp
    DataReaderListener.cpp
    MessageTypeSupportImpl.cpp
  }
}
