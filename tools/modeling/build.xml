<project name="opendds-modeling" default="plugins"
         xmlns:ivy="antlib:org.apache.ivy.ant">

    <import file="${basedir}/common/build-common.xml"/>

    <!--
        Project Targets
    -->
    <target name="all" depends="clean, plugins"/>

    <target name="init" depends="common.init">
      <ivy:buildlist reference="project.buildpath">
          <fileset dir="${project.plugins.dir}">
              <include name="**/build.xml"/>
          </fileset>
      </ivy:buildlist>
    </target>

    <target name="clean" depends="init">
        <subant buildpathref="project.buildpath" inheritall="true">
            <target name="clean"/>
        </subant>
    </target>

    <target name="plugins" depends="init">
        <subant buildpathref="project.buildpath" inheritall="true">
            <!-- default target -->
        </subant>
    </target>
</project>
