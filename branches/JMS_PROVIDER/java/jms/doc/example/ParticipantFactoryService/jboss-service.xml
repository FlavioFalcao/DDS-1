<?xml version="1.0" encoding="UTF-8"?>
<!--
    $Id$

    Example ParticipantFactoryService configuration.

    This configuration will create a DomainParticipantFactory
    instance which uses the SimpleTcp transport type and listens
    to localhost:8888.

    Author:  Steven Stallion
    Version: $Revision$
-->
<!DOCTYPE server PUBLIC "-//JBoss//DTD MBean Service 4.2//EN"
    "http://www.jboss.org/j2ee/dtd/jboss-service_4_2.dtd">

<server>
    <mbean code="org.opendds.jms.jmx.ParticipantFactoryService"
           name="opendds:service=DomainParticipantFactory">
        <attribute name="DCPSDebugLevel">10</attribute>
        <attribute name="DCPSInfoRepo">iiop://localhost:7777</attribute>
        <attribute name="DCPSTransportType">SimpleTcp</attribute>
        <attribute name="ORBDebugLevel">10</attribute>
        <attribute name="ORBListenEndpoints">iiop://localhost:8888</attribute>
        <attribute name="ORBLogFile">${jboss.server.log.dir}/ServiceParticipant.log</attribute>
    </mbean>
</server>
