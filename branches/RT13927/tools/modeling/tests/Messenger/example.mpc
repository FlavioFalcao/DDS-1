project(*model) : dds_model {
  custom_only = 1
}

project(*publisher) : dcpsexe {
  exename   = publisher
  includes += $(DDS_ROOT)/../sdk/tools/modeling/codegen
  libpaths += src
  after    += example_model
  libs     += OpenDDS_Model Messenger

  Source_Files {
    publisher.cpp
  }
}

project(*subscriber) : dcpsexe {
  exename   = subscriber
  includes += $(DDS_ROOT)/../sdk/tools/modeling/codegen
  libpaths += src
  after    += example_model
  libs     += OpenDDS_Model Messenger

  Source_Files {
    subscriber.cpp
  }
}

