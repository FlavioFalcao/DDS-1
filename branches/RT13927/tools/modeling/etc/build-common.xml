<?xml version="1.0" encoding="UTF-8"?>
<!--
    $Id$
-->
<project name="common"
         xmlns:ivy="antlib:org.apache.ivy.ant">

    <!--
        Common Properties
    -->
    <dirname property="project.basedir" file="${ant.file.common}/.."/>
    <property name="project.etc.dir" value="${project.basedir}/etc"/>
    <property name="project.lib.dir" value="${project.basedir}/lib"/>
    <property name="project.plugins.dir" value="${project.basedir}/plugins"/>

    <property environment="env"/>

    <property file="${project.basedir}/build.properties"/>

    <!--
        Common Targets
    -->
    <target name="bootstrap" unless="common.bootstrap">
        <property name="ivy.settings.file"
                  value="${project.etc.dir}/ivysettings.xml"/>

        <!-- Apache Ivy initialization -->
        <taskdef uri="antlib:org.apache.ivy.ant"
                 resource="org/apache/ivy/ant/antlib.xml"
                 classpath="${project.lib.dir}/ivy-2.1.0.jar"/>

        <ivy:configure/>

        <!-- Prevent spurious re-initialization -->
        <property name="common.bootstrap" value="true"/>
    </target>
</project>
