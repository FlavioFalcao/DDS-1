
project(*Server) : taoexe, portableserver, iortable {
  exename = syncServer
  avoids += minimum_corba

  IDL_Files {
    Sync.idl
  }

  Source_Files {
    SyncServer_i.cpp
    SyncServer.cpp
  }
}

project(*ServerLib) : taolib, portableserver, iortable {
   sharedname = SyncServer
   after += *Server
   dynamicflags = SYNC_BUILD_DLL

  Source_Files {
    SyncServer_i.cpp
    SyncC.cpp
    SyncS.cpp
  }
}

project(*Client) : taolib {
   sharedname = SyncClient
   after += *Server
   dynamicflags = SYNC_BUILD_DLL

  Source_Files {
    SyncC.cpp
    SyncS.cpp
    SyncClient_i.cpp
  }
}
