project(*Publisher): dcpsexe_with_tcp, dcps_unreliable_dgram {
  exename   = publisher
  libpaths += ../FooType4
  libpaths += ../common
  libs     +=  common DcpsFooType4
  after    += DcpsFooType4 common

  Source_Files {
    common.cpp
    publisher.cpp
    Writer.cpp
    DataWriterListenerImpl.cpp
  }
}


project(*Subscriber): dcpsexe_with_tcp, dcps_unreliable_dgram {
  exename   = subscriber
  libpaths += ../FooType4
  libpaths += ../common
  libs     +=  common DcpsFooType4
  after    += DcpsFooType4 common

  Source_Files {
    common.cpp
    subscriber.cpp
    DataReaderListener.cpp
  }
}

